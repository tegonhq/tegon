{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "openapi": [ "/openapi.yml" ],
  "theme": "quill",
  "layout": "sidenav",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#5484ef",
    "light": "#5484ef",
    "dark": "#5484ef",
    "anchors": {
      "from": "#5484ef",
      "to": "#5484ef"
    },
    "background": {
      "light": "#fff",
      "dark": "#191919"
    }
  },
  "rounded": "default",
  "api": {
    "playground": {
      "mode": "simple"
    },
    "maintainOrder": true
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true,
    "thumbsRating": true
  },
  "topbarLinks": [
    {
      "name": "Dashboard",
      "url": "https://app.tegon.ai"
    },
    {
      "name": "Slack",
      "url": "https://join.slack.com/t/tegoncommunity/shared_invite/zt-2jvar8p1x-9wqFTL9PP5ICImb76qcjEA"
    }
  ],
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/tegonhq/tegon"
  },

  "anchors": [
    {
      "name": "Guides",
      "icon": "book",
      "url": "guides"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction",
        "quickstart"
      ]
    },
    {
      "group": "Guide",
      "pages": [
        "guides/issues",
        "guides/triage",
        "guides/views"
      ]
    },
    {
      "group": "Integrations",
      "pages": [
        "integrations/overview",
        "integrations/contribute"
      ]
    },
    {
      "group": "API reference",
      "pages": [
        "api-reference/overview",
        {
          "group": "Issue API",
          "pages": [ "api-reference/issue/create", "api-reference/issue/update" ]
        }
      ]
    },
    {
      "group": "Tegon Open Source (OSS)",
      "pages": [
        "oss/local-setup",
        "oss/self-deployment"
      ]
    }
  ],
  "footerSocials": {
    "twitter": "https://x.com/tegonhq",
    "linkedin": "https://www.linkedin.com/company/tegon-ai"
  }
}
