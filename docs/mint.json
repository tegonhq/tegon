{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "openapi": [ "/openapi.yml" ],
  "theme": "quill",
  "layout": "sidenav",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#5484ef",
    "light": "#5484ef",
    "dark": "#5484ef",
    "anchors": {
      "from": "#5484ef",
      "to": "#5484ef"
    },
    "background": {
      "light": "#fff",
      "dark": "#191919"
    }
  },
  "rounded": "default",
  "api": {
    "playground": {
      "mode": "simple"
    },
    "maintainOrder": true
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true,
    "thumbsRating": true
  },
  "topbarCtaButton": {
    "name": "Sign in",
    "url": "https://app.tegon.ai"
  },
  "topbarLinks": [
    {
      "name": "Slack",
      "url": "https://join.slack.com/t/tegoncommunity/shared_invite/zt-2jvar8p1x-9wqFTL9PP5ICImb76qcjEA"
    }
  ],
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/tegonhq/tegon"
  },
  "redirects": [
    {
      "source": "/fundamentals/actions",
      "destination": "/actions/overview"
    },
    {
      "source": "/fundamentals/issues",
      "destination": "/guides/issues"
    },
    {
      "source": "/fundamentals/triage",
      "destination": "/guides/triage"
    },
    {
      "source": "/fundamentals/cycles",
      "destination": "/guides/cycles"
    }
  ],
  "anchors": [
    {
      "name": "User Guides",
      "icon": "book",
      "url": "guides"
    },
    {
      "name": "API",
      "icon": "brackets-curly",
      "url": "api-reference"
    },
    {
      "name": "Actions",
      "icon": "code",
      "url": "actions"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction",
        "quickstart",
        "changelog"
      ]
    },
    {
      "group": "User Guides",
      "pages": [
        "guides/issues",
        "guides/triage",
        "guides/views",
        "guides/cycles"
      ]
    },
    {
      "group": "Fundamentals",
      "pages": [
        "fundamentals/issues",
        "fundamentals/triage",
        "fundamentals/cycles",
        "fundamentals/actions"
      ]
    },

    {
      "group": "Actions",
      "pages": [
        "actions/overview",
        "actions/config",
        {
          "group": "Use Cases",
          "pages": [ "actions/usecases/usecases-overview", "actions/usecases/bug-enricher", "actions/usecases/issue-view-summary", "actions/usecases/slack-actions", "actions/usecases/email-actions"  ]
        },
        "actions/regular-actions",
        "actions/integration-based-actions",
        "actions/scheduled-actions",
        
      ]
    },
    {
      "group": "Deployment",
      "pages": [ "actions/deployment/deploying-actions" ]
    },
    {
      "group": "API reference",
      "pages": [
        "api-reference/overview",
        {
          "group": "Issue API",
          "pages": [ "api-reference/issue/create", "api-reference/issue/update", "api-reference/issue/delete", "api-reference/issue/getIssue", "api-reference/issue/move" ]
        },
        {
          "group": "Action API",
          "pages": [ "api-reference/action/action_slug_run", "api-reference/action/action_slug_inputs" ]
        },
        {
          "group": "AI Requests",
          "pages": [ "api-reference/ai_requests/create", "api-reference/ai_requests/stream" ]
        },
        {
          "group": "Issue Comments",
          "pages": [ "api-reference/issue_comments/create", "api-reference/issue_comments/linked_comment", "api-reference/issue_comments/getlinkedcomment", "api-reference/issue_comments/getissuecommentId", "api-reference/issue_comments/updateissuecommentId" ]
        },
        {
          "group": "Issue Relation",
          "pages": [ "api-reference/issue_relation/delete" ]
        },
        {
          "group": "Labels",
          "pages": [ "api-reference/labels/getlabels", "api-reference/labels/createlabel", "api-reference/labels/updatelabel", "api-reference/labels/deletelabel" ]
        },
        {
          "group": "Linked Issue",
          "pages": [ "api-reference/linked_issue/createlinkedissue", "api-reference/linked_issue/getlinkedissue", "api-reference/linked_issue/updatelinkedissue", "api-reference/linked_issue/deletelinkedissue", "api-reference/linked_issue/getbysource", "api-reference/linked_issue/getPATs", "api-reference/linked_issue/postbysourceId" ]
        },
        {
          "group": "Users",
          "pages": [ "api-reference/users/createPAT", "api-reference/users/deletePAT", "api-reference/users/getuser", "api-reference/users/postuser" ]
        },
        {
          "group": "Views",
          "pages": [ "api-reference/views/getview" ]
        },
        {
          "group": "Teams",
          "pages": [ "api-reference/teams/get" ]
        }

      ]
    },
    {
      "group": "Open source",
      "pages": [
        "oss/local-setup",
        "oss/self-deployment"
      ]
    }
  ],
  "footerSocials": {
    "twitter": "https://x.com/tegonhq",
    "linkedin": "https://www.linkedin.com/company/tegon-ai"
  }
}
