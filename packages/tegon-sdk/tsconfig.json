{
  "extends": "@tegonhq/typescript-config/node.json",
  "include": ["./src/**/*.ts", "tsup.config.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@tegonhq/services": ["../services/src/index"],
      "@tegonhq/types": ["../types/src/index"]
    },
    "lib": ["DOM", "DOM.Iterable"],
    "declaration": false,
    "declarationMap": false,
    "stripInternal": true
  },
  "exclude": ["node_modules"]
}
