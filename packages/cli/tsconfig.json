{
  "extends": "@tegonhq/typescript-config/node.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./e2e/**/*.ts",
    "./types.d.ts",
    "./tsup.config.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@tegonhq/types": ["../types/src/index"]
    },
    "lib": ["DOM", "DOM.Iterable"],
    "declaration": false,
    "declarationMap": false,
    "stripInternal": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
