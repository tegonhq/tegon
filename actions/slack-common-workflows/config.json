{
  "slug": "slack-common-workflows",
  "name": "Slack common workflows",
  "triggers": [
    {
      "type": "on_create",
      "entities": [ "IssueComment", "LinkedIssue" ]
    },
    {
      "type": "source_webhook",
      "entities": [ "slack" ]
    }
  ],
  "integrations": [ "slack" ],
  "inputs": {
    "type": "object",
    "properties": {
      "channelTeamMappings": {
        "type": "array",
        "title": "Channel to Team Mappings",
        "description": "Map each channel to a team",
        "items": {
          "type": "object",
          "properties": {
            "channelId": {
              "type": "text",
              "title": "Channel ID",
              "validation": {
                "required": true
              }
            },
            "teamId": {
              "type": "text",
              "title": "Team ID",
              "validation": {
                "required": true
              }
            }
          }
        }
      }
    }
  }
}
